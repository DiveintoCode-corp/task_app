<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @task.content %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @task.deadline %>
</p>

<p>
  <strong>Auther:</strong>
  <%= @task.auther.name %>
</p>

<p>
  <strong>Charge:</strong>
  <%= @task.charger.name %>
</p>

<p>
  <strong>Status:</strong>
  <%= display_status(@task.status) %>
</p>

<%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-info' %> |
<%= link_to 'Back', tasks_path, class: 'btn btn-default' %> |
<% if @task.charger == current_user %>
  <%= link_to 'アサイン', assign_task_path(@task), class: 'btn btn-success' %>
<% end %>
