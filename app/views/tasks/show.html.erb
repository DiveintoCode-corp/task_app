<div class="jumbotron">
	<h1><%= @task.title %></h1>
	<p><%= @task.content %></p>
	<p>期限：<%= @task.deadline %></p>
	<p>担当者：<%= @task.user.name %></p>
	<p>ステータス：<%= display_status(@task.status) %></p>
	<p>
	  <%= link_to '一覧へ戻る', tasks_path, class: 'btn btn-default' %>
	  <% if @task.user == current_user %>
	    <%= link_to '編集', edit_task_path(@task), class: 'btn btn-info' %>
      <%= link_to 'アサイン', assign_task_path(@task), class: 'btn btn-success' %>
    <% end %>
	</p>
</div>